<Window x:Class="Studiengangsverwaltung.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studiengangsverwaltung.view"
        mc:Ignorable="d"
        Title="Studiengangsverwaltung" Width="890" Height="570" Closing="MainWindow_Closing" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.Resources>
        <Style x:Key="TabItemText" TargetType="{x:Type TextBlock}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TabItem}}" Value="False">
                    <Setter Property="FontWeight" Value="Normal"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl x:Name="tc_menu" Margin="10">
            <TabItem FontFamily="Calibri" FontSize="14" Width="160" Height="28" Cursor="Hand" Margin="-4,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <TabItem.Header>
                    <TextBlock Text="Studiengangsverwaltung" Style="{StaticResource TabItemText}" />
                </TabItem.Header>
                <Grid Background="#FFE5E5E5" Cursor="Arrow">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lv_studiengaenge" Height="140" Margin="10,10,10,0" VerticalAlignment="Top">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Label Content="Semester:" Margin="10,202,0,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" Padding="4,0,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="85"/>
                    <Label Content="Dozent:" Margin="440,202,0,0" Height="28" FontSize="14" FontWeight="Bold" Padding="4,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68"/>
                    <Label Content="Studiengang:" Margin="10,155,0,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" Padding="4,0,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="85"/>
                    <ComboBox x:Name="cb_studiengang" HorizontalAlignment="Left" Margin="100,155,0,0" VerticalAlignment="Top" Width="295" Height="28"/>
                    <TextBox x:Name="tb_studiengang" HorizontalAlignment="Left" Height="28" Margin="100,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" VerticalContentAlignment="Center" Padding="4,0,0,0" MaxLines="1"/>
                    <ListView HorizontalAlignment="Left" Margin="100,268,0,0" Width="335" Height="164" VerticalAlignment="Top">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ComboBox x:Name="cb_studiengang_Copy" HorizontalAlignment="Left" Margin="10,235,0,0" VerticalAlignment="Top" Width="45" Height="28"/>
                    <Button x:Name="btn_add_semester" Content="+" Margin="60,235,0,0" VerticalAlignment="Top" Height="28" HorizontalAlignment="Left" Width="35"/>
                    <Label Content="Kurs:" Margin="97,202,0,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" Padding="4,0,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="338"/>
                    <ComboBox x:Name="cb_studiengang_Copy1" Margin="100,235,0,0" VerticalAlignment="Top" Width="302" Height="28" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left"/>
                    <ListView HorizontalAlignment="Left" Margin="10,268,0,0" Width="85" Height="164" VerticalAlignment="Top">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Label Content="Student:" Margin="440,235,0,0" Height="28" FontSize="14" FontWeight="Bold" Padding="4,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68"/>
                    <ComboBox x:Name="cb_student" Margin="0,235,43,0" VerticalAlignment="Top" Height="28" HorizontalAlignment="Right" Width="302"/>
                    <ListView Margin="440,268,10,0" Height="164" VerticalAlignment="Top">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Separator Height="9" Margin="10,188,10,0" VerticalAlignment="Top"/>
                    <Button x:Name="btn_reset_studiengang" Content="Zurücksetzen" HorizontalAlignment="Left" Margin="10,0,0,10" Width="100" IsCancel="True" IsEnabled="False" FontSize="14" FontFamily="Calibri" Height="28" VerticalAlignment="Bottom" Cursor="Hand"/>
                    <Button x:Name="btn_save_studiengang" Content="Speichern" Margin="0,0,10,10" IsDefault="True" IsEnabled="False" FontFamily="Calibri" FontSize="14" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
                    <ComboBox Margin="0,202,10,0" VerticalAlignment="Top" Height="28" HorizontalAlignment="Right" Width="335"/>
                    <Button Content="+" HorizontalAlignment="Left" Margin="407,235,0,0" VerticalAlignment="Top" Width="28" Height="28"/>
                    <Button Content="+" HorizontalAlignment="Right" Margin="0,235,10,0" VerticalAlignment="Top" Width="28" Height="28"/>
                    <Button x:Name="btn_new_studiengang" Content="Neu" Margin="0,0,220,10" IsEnabled="False" FontFamily="Calibri" FontSize="14" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
                    <Button x:Name="btn_del_studiengang" Content="Löschen" Margin="0,0,115,10" IsEnabled="False" FontFamily="Calibri" FontSize="14" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
                </Grid>
            </TabItem>
            <TabItem FontFamily="Calibri" FontSize="14" Width="160" Height="28" Cursor="Hand" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="-4,0,0,0">
                <TabItem.Header>
                    <TextBlock Text="Personenverwaltung" Style="{StaticResource TabItemText}" />
                </TabItem.Header>
                <local:Personverwaltung/>
            </TabItem>
            <TabItem FontFamily="Calibri" FontSize="14" Width="160" Height="28" Cursor="Hand" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="-4,0,0,0">
                <TabItem.Header>
                    <TextBlock Text="Kursverwaltung" Style="{StaticResource TabItemText}" />
                </TabItem.Header>
                <local:Kursverwaltung/>
            </TabItem>
            <TabItem FontFamily="Calibri" FontSize="14" Width="160" Height="28" Cursor="Hand" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="-4,0,0,0">
                <TabItem.Header>
                    <TextBlock Text="Semesterverwaltung" Style="{StaticResource TabItemText}" />
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="lv_kurse_Copy" Height="140" Margin="10,10,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nr." DisplayMemberBinding="{Binding Name}" Width="40"/>
                                <GridViewColumn Header="Beschreibung" DisplayMemberBinding="{Binding Beschreibung}" Width="774"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <DatePicker x:Name="dp_startdatum_Copy" HorizontalAlignment="Left" Margin="190,155,0,0" VerticalAlignment="Top" Height="28" VerticalContentAlignment="Center" Padding="2" FontSize="14" FontFamily="Calibri" Width="100"/>
                    <DatePicker x:Name="dp_endedatum_Copy" HorizontalAlignment="Left" Margin="321,155,0,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="14" Width="100" Height="28"/>
                    <Label Content="von" Margin="154,155,0,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center" Width="32" HorizontalContentAlignment="Center" HorizontalAlignment="Left"/>
                    <Label Content="bis" Margin="290,154,0,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="30" HorizontalContentAlignment="Center" Padding="5" HorizontalAlignment="Left"/>
                    <TextBox x:Name="tb_semester_Copy" HorizontalAlignment="Left" Height="28" Margin="113,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" Padding="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1"/>
                    <Label Content="Semester:" Margin="10,155,742,0" Height="28" FontSize="14" FontWeight="Bold" Padding="4,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top"/>
                    <TextBox x:Name="tb_beschreibung_Copy" HorizontalAlignment="Left" Height="61" Margin="113,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" Padding="4,3" MaxLines="1"/>
                    <Label Content="Beschreibung:" Margin="10,188,0,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" Padding="4,0,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="98"/>
                    <Button x:Name="btn_reset_semester" Content="Zurücksetzen" HorizontalAlignment="Left" Margin="10,0,0,10" Width="100" IsCancel="True" IsEnabled="False" FontSize="14" FontFamily="Calibri" Height="28" VerticalAlignment="Bottom" Cursor="Hand"/>
                    <Button x:Name="btn_new_semester" Content="Neu" Margin="0,0,220,10" IsEnabled="False" FontFamily="Calibri" FontSize="14" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
                    <Button x:Name="btn_del_semester" Content="Löschen" Margin="0,0,115,10" IsEnabled="False" FontFamily="Calibri" FontSize="14" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
                    <Button x:Name="btn_save_semester" Content="Speichern" Margin="0,0,10,10" IsDefault="True" IsEnabled="False" FontFamily="Calibri" FontSize="14" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>