<Window x:Class="Studiengangsverwaltung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Studiengangsverwaltung" Height="463" Width="800">
    <Grid HorizontalAlignment="Left" Width="790">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="8,8,10,8" Height="416">
            <TabItem Header="Personenverwaltung" Width="150" Padding="6,2" Margin="-6,-2,-2,0" Height="28" FontSize="14" FontFamily="Calibri" Cursor="Hand">
                <Grid Background="#FFE5E5E5" Margin="0" Cursor="Arrow">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="283*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="cb_rolle" HorizontalAlignment="Left" Margin="103,178,0,0" VerticalAlignment="Top" Width="120" Height="28" FontSize="14" FontFamily="Calibri" Grid.ColumnSpan="2"/>
                    <ListView x:Name="lv_personen" HorizontalAlignment="Left" Height="140" Margin="10,33,0,0" VerticalAlignment="Top" Width="748" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Label Content="Vorname:" Margin="10,211,102,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="tb_vorname" HorizontalAlignment="Left" Height="28" Margin="103,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" VerticalContentAlignment="Center" Padding="4,0,0,0" Grid.ColumnSpan="2" MaxLines="1"/>
                    <Label Content="Nachname:" Margin="10,244,102,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="tb_nachname" HorizontalAlignment="Left" Height="28" Margin="103,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" VerticalContentAlignment="Center" Padding="4,0,0,0" Grid.ColumnSpan="2" MaxLines="1"/>
                    <Label Content="Rolle:" Margin="10,178,102,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
                    <Label Content="Geburtstag:" Margin="10,277,102,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center" Width="88"/>
                    <DatePicker x:Name="dp_geburtstag" HorizontalAlignment="Left" Margin="103,277,0,0" VerticalAlignment="Top" Height="28" VerticalContentAlignment="Center" Padding="2" FontSize="14" FontFamily="Calibri" Width="104" Text="20.10.2019" Grid.ColumnSpan="2"/>
                    <Label Content="Straße:" Margin="163,211,333,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center" Grid.Column="1"/>
                    <TextBox x:Name="tb_strasse" HorizontalAlignment="Left" Height="28" Margin="238,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="319" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" VerticalContentAlignment="Center" Padding="4,0,0,0" Grid.Column="1" MaxLines="1"/>
                    <Label Content="PLZ/Ort:" Margin="163,244,333,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center" Grid.Column="1"/>
                    <TextBox x:Name="tb_postleitzahl" HorizontalAlignment="Left" Height="28" Margin="238,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" VerticalContentAlignment="Center" Padding="4,0,0,0" Grid.Column="1" MaxLines="1"/>
                    <TextBox x:Name="tb_ort" HorizontalAlignment="Left" Height="28" Margin="293,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" VerticalContentAlignment="Center" Padding="4,0,0,0" Grid.Column="1" MaxLines="1"/>
                    <Button x:Name="btn_person_reset" Content="Zurücksetzen" HorizontalAlignment="Left" Margin="10,345,0,0" VerticalAlignment="Top" Width="90" Height="25" IsCancel="True" IsEnabled="False" FontSize="14" FontFamily="Calibri"/>
                    <Button x:Name="btn_person_save" Content="Speichern" HorizontalAlignment="Left" Margin="105,345,0,0" VerticalAlignment="Top" Width="90" Height="25" IsDefault="True" IsEnabled="False" FontFamily="Calibri" FontSize="14"/>
                    <TextBox x:Name="tb_person_search" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="438,5,0,0" TextWrapping="Wrap" Text="Suche..." VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center" Padding="2,0,0,0" MaxLines="1" IsUndoEnabled="True" TextChanged="tb_person_search_TextChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Kursverwaltung" Width="160" Height="28" Margin="-6,-2,-2,0" FontFamily="Calibri" FontSize="14" Cursor="Hand" VerticalContentAlignment="Center">
                <Grid Background="#FFE5E5E5" Margin="0" Height="380" Cursor="Arrow">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lv_kurse" HorizontalAlignment="Left" Height="140" Margin="10,33,0,0" VerticalAlignment="Top" Width="748">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="btn_reset" Content="Zurücksetzen" HorizontalAlignment="Left" Margin="10,345,0,0" VerticalAlignment="Top" Width="90" Height="25" IsCancel="True" IsEnabled="False" FontSize="14" FontFamily="Calibri"/>
                    <Button x:Name="btn_save" Content="Speichern" HorizontalAlignment="Left" Margin="105,345,0,0" VerticalAlignment="Top" Width="90" Height="25" IsDefault="True" IsEnabled="False" FontFamily="Calibri" FontSize="14"/>
                    <TextBox x:Name="tb_beschreibung" HorizontalAlignment="Left" Height="61" Margin="111,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" Padding="4,3" MaxLines="1"/>
                    <DatePicker x:Name="dp_startdatum" HorizontalAlignment="Left" Margin="189,277,0,0" VerticalAlignment="Top" Height="28" VerticalContentAlignment="Center" Padding="2" FontSize="14" FontFamily="Calibri" Width="104" Text="20.10.2019"/>
                    <DatePicker x:Name="dp_endedatum" HorizontalAlignment="Left" Margin="325,277,0,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="14" Width="104" Height="28" Text="20.10.2019"/>
                    <Label Content="Kursname:&#xD;&#xA;" Margin="10,178,660,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
                    <Label Content="Beschreibung:&#xA;" Margin="10,211,660,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center" Width="96"/>
                    <TextBox x:Name="tb_name" HorizontalAlignment="Left" Height="28" Margin="111,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" VerticalContentAlignment="Center" Padding="4,0,0,0" MaxLines="1"/>
                    <Label Content="Semester:&#xA;" Margin="10,277,660,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
                    <Label Content="von" Margin="152,277,582,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
                    <Label Content="bis" Margin="293,277,441,0" VerticalAlignment="Top" Height="28" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="32" HorizontalContentAlignment="Center" Padding="5"/>
                    <TextBox x:Name="tb_semester" HorizontalAlignment="Left" Height="28" Margin="111,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" BorderBrush="#FF4D4D4D" Foreground="#FF4D4D4D" AutoWordSelection="True" FontFamily="Calibri" FontSize="14" Padding="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1"/>
                    <TextBox x:Name="tb_kurs_search" HorizontalAlignment="Left" Height="23" Margin="638,5,0,0" TextWrapping="Wrap" Text="Suche..." VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center" Padding="2,0,0,0" MaxLines="1" TextChanged="tb_kurs_search_TextChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Studiengangsverwaltung" Width="160" Height="28" Margin="-6,-2,-2,0" FontSize="14" FontFamily="Calibri" Cursor="Hand">
                <Grid Background="#FFE5E5E5" Cursor="Arrow"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
